                                        <Button Text=" example 1"></Button>
                                        <Button Text=" example 2"></Button>
                                    </StackLayout>
                                </ViewCell>
                            </TableSection>

                        </TableRoot>
                    </TableView>-->
                    
                </StackLayout>
                
            </StackLayout>
            
                <Button 
                        x:Name="UIButtonCollapse" 
                        IsVisible="True"
                        Text="↓Collapse↓" 
                        VerticalOptions="End" 
                        HorizontalOptions="End">
                </Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>